FROM rust:1.82-slim as builder

WORKDIR /app

# Install build dependencies
RUN apt-get update && apt-get install -y \
    protobuf-compiler \
    pkg-config \
    libssl-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy workspace files
COPY Cargo.toml /app/
COPY apprentice/Cargo.toml /app/apprentice/
COPY proto /app/proto
COPY build.rs /app/
COPY apprentice/build.rs /app/apprentice/

# Create dummy main files to cache dependencies
RUN mkdir -p src apprentice/src && \
    echo "fn main() {}" > src/main.rs && \
    echo "fn main() {}" > apprentice/src/main.rs

# Build dependencies
RUN cargo build --release -p apprentice

# Remove the dummy source and the dummy binary to force rebuild
RUN rm -rf src apprentice/src target/release/apprentice

# Copy actual source code
COPY apprentice/src /app/apprentice/src
COPY apprentice/prompts /app/apprentice/prompts

# Build the apprentice with the real source code
RUN touch apprentice/src/main.rs && cargo build --release -p apprentice

# Runtime stage
FROM debian:bookworm-slim

RUN apt-get update && apt-get install -y \
    ca-certificates \
    libssl3 \
    ripgrep \
    curl \
    jq \
    && rm -rf /var/lib/apt/lists/*

COPY --from=builder /app/target/release/apprentice /usr/local/bin/apprentice

EXPOSE 50051

CMD ["apprentice"]